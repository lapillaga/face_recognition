# Face Recognition Pipeline Configuration

# Device Configuration
# -1 = CPU, 0 = GPU:0, 1 = GPU:1, etc.
CTX_ID=-1

# Recognition Threshold
# Cosine similarity threshold for a positive match (0.0 - 1.0)
# Lower = more strict, Higher = more permissive
THRESH=0.35

# Camera Configuration
# Camera device ID (0 for default webcam, 1 for external camera, etc.)
CAMERA_ID=0

# Display Configuration
# 1 = show preview window, 0 = headless mode (no GUI)
DISPLAY=1

# Logging Configuration
# DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Model Configuration
# InsightFace model pack name
# Options: buffalo_l, buffalo_m, buffalo_s, buffalo_sc
# l = large (best accuracy), s = small (faster)
MODEL_PACK=buffalo_l

# Enrollment Configuration
# Number of face crops to capture per person during enrollment
NUM_ENROLLMENT_IMAGES=15

# Minimum Laplacian variance for sharpness check (higher = sharper)
# Typical range: 100-300
MIN_SHARPNESS=150

# Video Processing
# FPS cap for video processing (0 = no limit)
MAX_FPS=30

# Skip N frames for faster processing (1 = process every frame)
FRAME_SKIP=1